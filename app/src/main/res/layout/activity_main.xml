<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/first_main_layout">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_main_background">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/first_vector_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginVertical="30dp"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/first_text_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/beginimage"/>
    </LinearLayout>
    <FrameLayout
         android:layout_width="200sp"
         android:layout_height="match_parent"
        android:layout_margin="10dp">
        <LinearLayout
            android:id="@+id/first_vector_button"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="200sp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:onClick="beginGame"
                android:layout_margin="5sp"
                android:background="@drawable/button_back">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/continue_game">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/begin_game_button"
                    android:textColor="@color/baseColor"
                    android:layout_margin="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:onClick="rankingList"
                android:layout_margin="5sp"
                android:background="@drawable/button_back">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/rank_list_icon">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/randking_list_button"
                    android:textColor="@color/baseColor"
                    android:layout_margin="10dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_update_weapon"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_margin="5sp"
                android:onClick="updateWeapon"
                android:background="@drawable/button_back">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/update_weapon">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/update_weapon"
                    android:textColor="@color/baseColor"
                    android:layout_margin="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_margin="10sp"
            android:layout_gravity="right"
            android:id="@+id/main_volume">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/enemyWhite"
                android:layout_margin="5sp"
                android:text="声音：">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="musicSwitch"
                android:id="@+id/main_volume_icon"
                android:src="@drawable/volume_up">
            </ImageView>
        </LinearLayout>
    </FrameLayout>

    </LinearLayout>
</FrameLayout>